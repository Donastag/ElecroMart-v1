# placeholders below with your own values in a local `.env` file that is
# excluded from source control. See README or project docs for details.
GEMINI_API_KEY=REPLACE_WITH_GEMINI_API_KEY

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=REPLACE_WITH_SUPABASE_URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=REPLACE_WITH_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=REPLACE_WITH_SUPABASE_SERVICE_ROLE_KEY

# Payload CMS Configuration
# Use a local `.env` for real connection strings, e.g.
# DATABASE_URI=postgresql://postgres:password@host:5432/postgres
DATABASE_URI=REPLACE_WITH_DATABASE_URI
PAYLOAD_SECRET=REPLACE_WITH_PAYLOAD_SECRET_MIN_40_CHARS
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

